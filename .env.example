# Telegram API
# Получите API_ID и API_HASH на https://my.telegram.org/apps
API_ID=your_api_id
API_HASH=your_api_hash

# Номер телефона в международном формате (например: +79123456789)
PHONE_NUMBER=+your_phone_number

# ID или username группы для мониторинга (например: -4893394100 или @groupname)
GROUP_CHAT_ID=your_group_id

# (Опционально) Сохраненная сессия для быстрой авторизации
SESSION_STRING=

# Google Sheets
# ID таблицы из URL (например: 1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms)
GOOGLE_SHEET_ID=your_spreadsheet_id

# Имя листа в таблице (по умолчанию: Sheet1)
GOOGLE_SHEET_NAME=Sheet1

# Путь к файлу credentials.json (по умолчанию: ./credentials.json)
GOOGLE_CREDENTIALS_PATH=./credentials.json
